<form class="text-centered">
    <div class="form-group">
        <label for="#task-description">Description</label>
        <input type="description" name="task-description" class="form-control" id="task-description" placeholder="Enter a description">
        <div class="form-check">
            <label class="form-check-label" for="check-complete">Mark as Complete</label>
            <input type="checkbox" class="form-check-input float-right" id="check-complete">
        </div>
    </div>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    <button type="submit" class="btn btn-primary">Save</button>
</form>