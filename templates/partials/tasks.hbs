<div class="container-fluid">
    <div class="row">
        {{!-- Sidebar --}}
        <div class="col-2 collapse show d-md-flex bg-light pt-2 pl-0 min-vh-100" id="sidebar">
            <ul class="nav w-100 flex-column flex-nowrap overflow-hidden">
                {{!-- Collection Dropdown --}}
                <div class="dropdown">
                    <h5 class="display-5 d-none d-lg-inline">Collection</h5>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true"
                        aria-expanded="false"><i class="fas fa-plus"></i>
                    </a>
                    {{!-- Dropdown Options --}}
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">create team</a>
                        <a class="dropdown-item" href="#">leave team</a>
                    </div>
                </div>
                {{!-- Collections --}}
                <li class="nav-item">
                    <a class="nav-link text-truncate" href="#"><i class="fa fa-home"></i><span
                            class="d-none d-sm-inline">Generated by Modal</span></a>
                </li>
            </ul>
        </div>

        {{!-- Tasks Content --}}
        <div class="col pt-2" id="wrapper">
            <h2><a href="" data-target="#sidebar" data-toggle="collapse" class="d-md-none text-center"><i
                        class="fa fa-bars"></i></a>Render tasks from Collection</h2>
            <div class="row">
                {{#each tasks}}
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Card title</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.
                            </p>
                            {{ userTasks }}
                            <a href="#" class="btn btn-primary">Button</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{> createTaskModal}}
        </div>
    </div>
</div>